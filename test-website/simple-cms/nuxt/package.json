{
	"name": "directus-simple-cms-nuxt-starter",
	"repository": {
		"url": "https://github.com/directus-labs/starters"
	},
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"start": "nuxt start",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"typecheck": "nuxt typecheck",
		"lint": "eslint --cache .",
		"format": "prettier --write \"**/*.{md,y?(a)ml,json,vue}\"",
		"generate:types": "node ./scripts/generate-types.js",
		"visual-editing:dev": "pnpm dev",
		"visual-editing:dev--refresh-all": "NUXT_PUBLIC_TEST_CASE=refresh-all pnpm dev",
		"visual-editing:dev--refresh": "NUXT_PUBLIC_TEST_CASE=refresh pnpm dev",
		"visual-editing:dev--refresh-customized": "NUXT_PUBLIC_TEST_CASE=refresh-customized pnpm dev",
		"visual-editing:dev--methods": "NUXT_PUBLIC_TEST_CASE=methods pnpm dev",
		"visual-editing:ssr": "nuxt build --envName visual-editing:ssr && nuxt start",
		"visual-editing:ssr--refresh-all": "NUXT_PUBLIC_TEST_CASE=refresh-all pnpm visual-editing:ssr",
		"visual-editing:ssr--refresh": "NUXT_PUBLIC_TEST_CASE=refresh pnpm visual-editing:ssr",
		"visual-editing:ssr--refresh-customized": "NUXT_PUBLIC_TEST_CASE=refresh-customized pnpm visual-editing:ssr",
		"visual-editing:ssr--methods": "NUXT_PUBLIC_TEST_CASE=methods pnpm visual-editing:ssr",
		"visual-editing:ssg": "nuxt generate --envName visual-editing:ssg && npx serve .output/public",
		"visual-editing:monolith": "nuxt build --envName visual-editing:monolith && nuxt start"
	},
	"devDependencies": {
		"@directus/types": "13.0.0",
		"@nuxt/devtools": "2.0.0-beta.3",
		"@nuxtjs/eslint-config-typescript": "12.1.0",
		"@nuxtjs/eslint-module": "4.1.0",
		"@tailwindcss/typography": "0.5.16",
		"@typescript-eslint/eslint-plugin": "^8.21.0",
		"@typescript-eslint/parser": "^8.21.0",
		"defu": "^6.1.4",
		"destr": "^2.0.3",
		"directus-sdk-typegen": "^0.1.11",
		"dotenv": "^16.4.7",
		"eslint": "9.18.0",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-prettier": "5.2.3",
		"eslint-plugin-vue": "9.32.0",
		"prettier": "3.4.2",
		"typescript": "5.7.3",
		"vue-tsc": "2.2.0"
	},
	"dependencies": {
		"@directus/sdk": "19.0.0",
		"@directus/visual-editing": "^1.0.1",
		"@formkit/auto-animate": "0.8.2",
		"@hookform/resolvers": "^3.10.0",
		"@nuxt/icon": "1.10.3",
		"@nuxt/image": "1.9.0",
		"@nuxt/scripts": "^0.9.5",
		"@nuxtjs/color-mode": "^3.5.2",
		"@nuxtjs/seo": "2.1.0",
		"@nuxtjs/sitemap": "7.2.6",
		"@nuxtjs/tailwindcss": "6.13.1",
		"@vee-validate/zod": "^4.15.0",
		"@vueuse/core": "12.5.0",
		"@vueuse/nuxt": "12.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-vue-next": "^0.473.0",
		"nuxt": "^3.15.2",
		"nuxt-security": "^2.1.5",
		"radix-vue": "^1.9.12",
		"shadcn-nuxt": "0.11.3",
		"sharp": "^0.33.5",
		"tailwind-merge": "^2.6.0",
		"tailwindcss-animate": "^1.0.7",
		"vee-validate": "^4.15.0",
		"vue-hook-form": "^0.0.4",
		"zod": "^3.24.1"
	},
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.6.0"
	}
}
